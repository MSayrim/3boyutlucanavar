<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.CategoryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/modelNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorPrimaryDark"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#B3D3AF37"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/modelCatagoryDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6CC0000"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#CCD3AF37"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/modelSizeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCC0000"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E6D3AF37"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/modelPriceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3CC0000"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="36sp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/picSlaty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>